    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run w/ Debugger",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ppl.exe ",
            "args": [
                "${workspaceFolder}/tests/preparse/1.c",
                "-o",
                "outFile",
                "-t",
                "MAC_OS"
            ],
            "stopAtEntry": false,
            "cwd": ".",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\raylib\\mingw\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}