    "version": "0.2.0",
    "configurations": [
        {
            "name": "MacOS - PPL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ppl",
            "args": [
                "${workspaceFolder}/tests/preparse/1.c",
                "-o",
                "outFile",
                "-t",
                "MAC_OS"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "MacOS - TESTS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tests",
            "args": [
                "REGEX_GEN",
                "${workspaceFolder}/tests/preparse/1.c",
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        }
    ]
}